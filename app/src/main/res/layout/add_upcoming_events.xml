<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/_10sdp">

    <TextView
        android:id="@+id/txtEventTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Event Title" />

    <EditText
        android:id="@+id/edtEventTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtEventTitle"
        android:layout_marginTop="@dimen/_5sdp"
        android:background="@drawable/rectangle"
        android:hint="Title"
        android:inputType="text"
        android:padding="@dimen/_10sdp" />

    <TextView
        android:id="@+id/txtEventStartDateTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtEventTitle"
        android:layout_marginTop="@dimen/_15sdp"
        android:text="Start Date" />

    <TextView
        android:id="@+id/txtEventStartDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtEventStartDateTitle"
        android:layout_marginTop="@dimen/_5sdp"
        android:background="@drawable/rectangle"
        android:paddingVertical="@dimen/_10sdp"
        android:paddingStart="@dimen/_5sdp"
        android:text="Date" />

    <TextView
        android:id="@+id/txtEventEndDateTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtEventStartDate"
        android:layout_marginTop="@dimen/_15sdp"
        android:text="End Date" />

    <TextView
        android:id="@+id/txtEventEndDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtEventEndDateTitle"
        android:layout_marginTop="@dimen/_5sdp"
        android:background="@drawable/rectangle"
        android:paddingVertical="@dimen/_10sdp"
        android:paddingStart="@dimen/_5sdp"
        android:text="Date" />

    <TextView
        android:id="@+id/txtEventTimeTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtEventEndDate"
        android:layout_marginTop="@dimen/_15sdp"
        android:text="Event Time" />

    <TextView
        android:id="@+id/txtEventTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtEventTimeTitle"
        android:layout_marginTop="@dimen/_5sdp"
        android:background="@drawable/rectangle"
        android:paddingVertical="@dimen/_10sdp"
        android:paddingStart="@dimen/_5sdp"
        android:text="Event Time" />

    <TextView
        android:id="@+id/txtEventLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtEventTime"
        android:layout_marginTop="@dimen/_15sdp"
        android:text="Location" />

    <EditText
        android:id="@+id/edtEventLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtEventLocation"
        android:layout_marginTop="@dimen/_5sdp"
        android:background="@drawable/rectangle"
        android:gravity="top"
        android:hint="Location"
        android:imeOptions="actionDone"
        android:inputType="textImeMultiLine"
        android:padding="@dimen/_10sdp" />

    <TextView
        android:id="@+id/txtEventDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/edtEventLocation"
        android:layout_marginTop="@dimen/_15sdp"
        android:text="Event Description" />

    <EditText
        android:id="@+id/edtEventDescription"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_100sdp"
        android:layout_below="@id/txtEventDescription"
        android:layout_marginTop="@dimen/_5sdp"
        android:background="@drawable/rectangle"
        android:gravity="top"
        android:hint="Description"
        android:imeOptions="actionDone"
        android:inputType="textImeMultiLine"
        android:padding="@dimen/_10sdp" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/edtEventDescription"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/_10sdp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCancelEvent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            app:cornerRadius="@dimen/_20sdp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnAddEvent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_50sdp"
            android:layout_toEndOf="@id/btnCancelEvent"
            android:text="Add"
            app:cornerRadius="@dimen/_20sdp" />
    </RelativeLayout>

</RelativeLayout>